.category_brand
    min-height 5vh
    margin-bottom 1.5rem
    padding 15px
    background var(--title-color)
    color #fff
    font-weight 900
    // text-align center

.category_card
    min-height 5vh
    margin-bottom 1.5rem
    padding 15px
    // text-align center

.category_name
    padding 0.375rem
    display inline-block
    font-weight 600
    font-size 1.2rem
    cursor pointer
    margin-bottom 10px
    &:hover
        color $theme-color


.category_count
    font-size 0.75rem
    padding 0.375rem
    display inline-block
    cursor pointer
    &:hover
        color $theme-color

.article_info
    margin-bottom 2px
    display flex
    // align-items flex-end
    align-items center
    justify-content space-between
    position inherit

.article_list_title
    font-size 0.9rem
    display inline-block
    padding-left 1rem
    padding-right 1rem
    margin-right 1rem
    border-radius 5px
    &:hover
        background-color var(--tag-color)
        cursor pointer

.article_list_date
    font-size 0.9rem
    display inline-block
    margin-right 1rem


// 移动端适配
@media (max-width: 767px)
    .article_list_title
        // 下方为过长内容显示...
        width 50%
        text-overflow ellipsis
        white-space nowrap
        word-wrap break-word
        overflow-x hidden
        // vertical-align middle
    .article_list_tags
        display none
